@{
    ViewBag.Title = "邮件管理";
}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body panel_body">
            <table data-toggle="table" id="table" class="table table-hover" data-page-size="10"
                   data-query-params-type=""
                   data-query-params=customquery
                   data-side-pagination="server"
                   data-url="/api/Sys/EmailQueryPage"
                   data-pagination="true">
                <thead>
                    <tr>
                        <th data-field="Subject">标题</th>
                        <th data-field="Body">内容</th>
                        <th data-field="ReceiveUserNames" data-width="300" data-formatter="operateUserFormatter">收件用户</th>
                        <th data-field="CCUserNames" data-width="300" data-formatter="operateUserFormatter">抄送用户</th>
                        @*<th data-field="SendTo">收件邮箱</th>
                            <th data-field="CC">抄送邮箱</th>*@
                        <th data-field="CreateDate" data-width="150" data-formatter="operateDateFormatter">创建时间</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!-- /.panel-body -->
</div>

<script>
    AddTable({
        placeholder: "根据标题搜索邮件",
        isAdd: false
    });

</script>